        </div><BR>
        <label class="control-label">{{ _('Minutes of data to keep in database') }}</label>
        <div class="controls">
            <input size="4" maxlength="4" type="text" data-bind="value: settings.plugins.emc2101.minutestokeep">
        </div>
                
    </div>
